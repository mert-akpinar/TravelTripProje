@using TravelTripProje.Models.Classes
@model List<Comments>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
<h2>Yorumlar Listesi</h2>
<table class="table table-bordered"> 
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.UserName</td>
        <td>@x.Mail</td>
        <td>@x.Comment</td>
        <td>@x.Blog.Title</td>
        <td><a href="/Admin/DeleteComment/@x.ID" class="btn btn-outline-danger">Sil</a></td>
        <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
    </tr>
    }
</table>
