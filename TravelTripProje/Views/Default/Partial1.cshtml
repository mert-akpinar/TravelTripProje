@using TravelTripProje.Models.Classes
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogImageUrl" alt="" />
        </div>
        <div class="left-text">
            <h4>@x.Title</h4>
            <span class="doller">@x.Date.ToString("dd.mm.yyyy")</span>
            <p>@x.Description.Substring(0,100)</p>
            <p><a href="/blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>
    }
    @Html.Action("Partial2", "Default")
    
    <div class="clear"></div>
</div>